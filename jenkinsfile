pipeline {
    agent any
  


   

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
stage("Clone the project") {
    git branch: 'master', url: 'https://github.com/wajdi-HUB/testDevopsRepo.git'
  }
        stage('Test') {
            steps {
                script {
                    def mvnHome = tool 'Maven'
                    def javaHome = tool 'Java'
                    
                    withEnv(["JAVA_HOME=${javaHome}", "PATH+MAVEN=${mvnHome}/bin"]) {
                        sh "mvn clean test"
                    }
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    def mvnHome = tool 'Maven'
                    def javaHome = tool 'Java'
                    
                    withEnv(["JAVA_HOME=${javaHome}", "PATH+MAVEN=${mvnHome}/bin"]) {
                        sh "mvn clean package"
                    }
                }
            }
        }
    }
}
